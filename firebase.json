{
  "hosting": {
    "public": "./build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/resume.pdf",
        "destination": "https://portfolio-assets-2.storage.googleapis.com/resume.pdf",
        "type": 301
      }
    ]
  }
}
